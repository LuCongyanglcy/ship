<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS parameter setting"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </TableRow>
		<View
        android:layout_height="2dip"
        android:background="#FF909090" />
        
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ellipsoid radius" />
            <EditText
                android:id="@+id/Radius"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number" >

                <requestFocus />
            </EditText>
			
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Oblateness" />
            
            <EditText
                android:id="@+id/Flattening"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" >

            </EditText>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Central meridian" />
             <EditText
                android:id="@+id/Centralline"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" >

            </EditText>

            
        </TableRow>
		<View
        android:layout_height="2dip"
        android:background="#FF909090" />
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GPS parameter conversion Tx" />

            <EditText
                android:id="@+id/gpsTx"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:inputType="numberDecimal">

            </EditText>
            
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GPS parameter conversion Ty" />

            <EditText
                android:id="@+id/gpsTy"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" >

            </EditText>
           
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GPS parameter conversion Tz" />
            <EditText
                android:id="@+id/gpsTz"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" >

            </EditText>
        </TableRow>
		<View
        android:layout_height="2dip"
        android:background="#FF909090" />
        
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GPS parameter conversion Rx" />

            <EditText
                android:id="@+id/gpsRx"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" >

            </EditText>
            
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GPS parameter conversion Ry" />

            <EditText
                android:id="@+id/gpsRy"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" >

            </EditText>
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GPS parameter conversion Rz" />

            <EditText
                android:id="@+id/gpsRz"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" >

            </EditText>
            
  
        </TableRow>
        <View
        android:layout_height="2dip"
        android:background="#FF909090" />
      
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X correction" />

            <EditText
                android:id="@+id/gpsX"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:inputType="numberDecimal" >

            </EditText>
            
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y correction" />

            <EditText
                android:id="@+id/gpsY"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" >

            </EditText>
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Z correction" />

            <EditText
                android:id="@+id/gpsZ"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" >

            </EditText>            
  
        </TableRow>
        <View
        android:layout_height="2dip"
        android:background="#FF909090" />
        
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GPS parameter S" />

            <EditText
                android:id="@+id/gpsS"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:inputType="numberDecimal" >

            </EditText>
            
            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Projection ratio" />

            <EditText
                android:id="@+id/projectscale"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" >

            </EditText>
          <CheckBox
                android:id="@+id/mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Engineering coordinates / Latitude and longitude" />
        </TableRow>
        <View
        android:layout_height="2dip"
        android:background="#FF909090" />
        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <CheckBox
                android:id="@+id/localrotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rotation conversion using local coordinates" />
            
        </TableRow>
        <View
        android:layout_height="2dip"
        android:background="#FF909090" />
        
        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rotation center point X" />

            <EditText
                android:id="@+id/rotateX"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:inputType="numberDecimal" >

            </EditText>
            
            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rotation center point Y" />

            <EditText
                android:id="@+id/rotateY"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" >

            </EditText>

        </TableRow>
        <View
        android:layout_height="2dip"
        android:background="#FF909090" />
        
        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Angle of rotation" />

            <EditText
                android:id="@+id/angle"	
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:inputType="numberDecimal" >

            </EditText>
            
            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Scaling ratio" />

            <EditText
                android:id="@+id/scale"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" >

            </EditText>

        </TableRow>
        <View
        android:layout_height="2dip"
        android:background="#FF909090" />

        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <TextView
                android:id="@+id/textView56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <TextView
                android:id="@+id/textView57"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
           

            <Button
                android:id="@+id/btngpsOk"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply" />
            <Button
                android:id="@+id/btngpsCancel"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />
            
        </TableRow>
    </TableLayout>

</LinearLayout>